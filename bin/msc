#!/usr/bin/env bash

# Java Parameters
JAVA=$(which java)

# Ms Parameters
PRG_NAME=magnesium-script
CPATH=$HOME/.m2/repository/uk/co/spicule/$PRG_NAME
VERSION_PATH=$(ls -d $CPATH/*/ | tail -n 1)
VERSION=$(echo $VERSION_PATH | rev | cut -d'/' -f2 | rev)
JAR=$PRG_NAME-$VERSION-launcher.jar
JAR_PATH=$VERSION_PATH$JAR

# Run the latest version of MagnesiumScript
echo -e "[MSC] Found in local Maven repository: $PRG_NAME v$VERSION"
$JAVA $MAVEN_OPTS -jar $JAR_PATH $@